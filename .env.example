# Liberation Analytics Environment Configuration
# Copy this file to .env and update the values

# Dashboard Authentication
DASHBOARD_USERNAME=analytics_admin
DASHBOARD_PASSWORD_HASH=$2a$10$placeholder_hash_generate_with_setup_script

# Database Configuration
POSTGRES_PASSWORD=generate_a_secure_random_password_here

# Analytics Configuration  
ENVIRONMENT=production
DUCKDB_PATH=/app/data/analytics.db

# Security (generate random secrets)
API_TOKEN_SECRET=generate_a_random_256_bit_secret_for_jwt_signing

# CORS Security - Restrict to your liberation domains
ALLOWED_ORIGINS=https://thegreenfieldoverride.com,https://staging.thegreenfieldoverride.com

# Optional: GeoIP (download GeoLite2-Country.mmdb from MaxMind)
GEOIP_ENABLED=false
GEOIP_DATABASE_PATH=/app/data/GeoLite2-Country.mmdb

# Rate Limiting
RATE_LIMIT_ENABLED=true
RATE_LIMIT_REQUESTS_PER_MINUTE=100
RATE_LIMIT_BURST=20

# Server Configuration
PORT=8080

# Hetzner Volume IDs (for deployment scripts)
ANALYTICS_VOLUME_ID=scsi-0HC_Volume_XXXXXXXXX
POSTGRES_VOLUME_ID=scsi-0HC_Volume_YYYYYYYYY